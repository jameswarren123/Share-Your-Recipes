<head>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">
</head>

<!-- Recipe Image -->
<img src="{{image_path}}" class="image-expand" alt="Recipe Image">

<!-- Rating Stars (clickable) -->
<div class="rating">
  {{#starCounts}}
    <form method="get" action="/rexpand/{{recipe_id}}/stars/{{.}}" style="display:inline;">
      <button type="submit" class="rating-button">
        <i class="fa-solid fa-star"></i>
      </button>
    </form>
  {{/starCounts}}
  :User rating
</div>

<!-- Directions -->
<h1 class="rate-h4">Directions:</h1>
<div class="rate-dir">
  <h4>{{directions}}</h4>
</div>
